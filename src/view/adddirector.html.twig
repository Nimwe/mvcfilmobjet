{% extends "base.html.twig" %}

{% block title %}Ajoute Director{% endblock %}

{% block head %}

 <style>

    form  {
      width: 60%;
    }

    form textarea {
      resize: none;
      width: 60%;
      min-height: 100px;
    }

    ul {
      list-style: none;
    }

    div {
      padding: 10px 0;
    }
  </style>

{% endblock %}

{% block content %}

  <h2>Ajoute réalisateur</h2>
  <form method="post" action="adddirector">
    <div>
      <input type="text" placeholder="Nom realisateur" name="surname" required/>
    </div>
     <div>
      <input type="text" placeholder="prénom realisateur" name="firstname" required/>
    </div>
     <div>
      <input type="text" placeholder="photo realisateur" name="photo" required/>
    </div>
    <button type="submit">Ajoute realisateur</button>
  </form>

{% endblock %}